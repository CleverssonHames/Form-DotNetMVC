@model FormWeb.Models.UserModel
 
@{
    ViewData["Title"] = "Editar usuário";
}

<h1 class="Display-3">Editar usuário</h1>
<div class="border p-3">
    <form asp-controller="Home" asp-action="UpdateUser" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="mt-3">
            <label class="form-label">Nome:</label>
            <input type="text" name="Nome" class="form-control" value="@Model.Nome"/>
        </div>
        <div class="mt-3">
            <label class="form-label">E-mail:</label>
            <input type="email" name="Email" class="form-control" value="@Model.Email" />
        </div>
        <div>
            <label class="form-label">Senha:</label>
            <input type="password" name="Senha" class="form-control" value="@Model.Senha" />
        </div>
        <input type="submit" class="mt-2 btn-primary" value="Salvar dados do usuário" />
        
    </form>
</div>