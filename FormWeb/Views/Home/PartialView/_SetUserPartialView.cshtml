@model UserViewModel

<h2 class="mt-5">Cadastro de usuário:</h2>
<div class="border p-2">
    <form asp-action="SetUser" method="post">
        <div class="mt-3">
            <label class="form-label">Name:</label>
            <input type="text" name="Nome" class="form-control" value="@Model.user.Nome" />
        </div>
        <div class="mt-3">
            <label class="form-label">Emails:</label>
            <input type="email" name="Email" class="form-control" value="@Model.user.Email" />
        </div>
        <div>
            <label class="form-label">Passwords:</label>
            <input type="password" name="Senha" class="form-control" value="@Model.user.Senha" />
        </div>
        <input type="submit" class="mt-2" />
    </form>
</div>
@if (Model.status == false && !string.IsNullOrEmpty(Model.status_descricao))
{
    <p class="alert alert-danger">@Model.status_descricao</p>
}
